<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0b0b0b">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0b0b0b"
    android:paddingTop="10dp"
    android:padding="15dp">


    <TextView
        android:id="@+id/degreename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degree Name"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/degreeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:padding="12dp"
        android:maxLength="30">


    </EditText>


    <TextView
        android:id="@+id/admyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admission Year"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        />


    <EditText
        android:id="@+id/admYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:padding="12dp"
        android:maxLength="30"/>

    <TextView
        android:id="@+id/passyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass Year"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/passYear"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffff"
        android:padding="12dp"
        android:maxLength="25"
        />



    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/institute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Institute Name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/instituteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/distanceEdu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance Learning"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="25dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <RadioButton android:id="@+id/distYes"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="true"
            android:textSize="25dp"
            android:paddingRight="10dp"
            />

        <RadioButton android:id="@+id/distNo"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="false"
            android:textSize="25dp"/>
    </RadioGroup>


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="22dp"
            android:padding="13dp"

            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="22dp"
            android:padding="13dp"
            android:layout_toRightOf="@id/submit"
            />

    </RelativeLayout>
</LinearLayout>

    </ScrollView>