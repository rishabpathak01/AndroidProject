<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0b0b0b">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0b0b"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:padding="30dp"
        android:lineSpacingExtra="12dp"
        android:textStyle="bold"
        android:id="@+id/Qualification"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/qid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qualification Id"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/qualificationId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:background="#ffffff"
        android:padding="12dp"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/updateQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Qualification"
            android:textSize="18dp"
            android:padding="10dp"
            android:onClick="updateQualification" />

        <Button
            android:id="@+id/deleteQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Qualification"
            android:textSize="18dp"
            android:padding="10dp"
            android:onClick="deleteQualification"/>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>